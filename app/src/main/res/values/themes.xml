<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionDicodingJDMCars" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_turquoise</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewCarList">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCarList.Num">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewCarList.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CarDetailImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextViewCarDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewCarDetail.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCarDetail.Title.CarName">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewCarDetail.Title.ShortSpec">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TextViewCarDetail.Title.Description">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewCarDetail.Desc">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TableLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-15dp</item>
    </style>

    <style name="TableRow.Brand">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TableRow.EngineCode_DWS">
        <item name="android:layout_marginTop">-5dp</item>
    </style>

    <style name="TableRowTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableRowTv.Colon">
        <item name="android:padding">5dp</item>
    </style>

    <style name="TableRowTv.DetailContent">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="UserTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UserTextView.Name">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserTextView.Email">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SplashScreen">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SplashScreen.Animation">
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="SplashScreen.Textview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_white</item>
    </style>

</resources>